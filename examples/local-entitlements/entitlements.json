{
  "default_action": "deny",
  "entries": [
    {
      "subject": "admin@example.edu",
      "roles": ["admin", "staff"],
      "metadata": {
        "department": "IT",
        "access_level": "full"
      }
    },
    {
      "subject": "manager@example.edu",
      "roles": ["manager", "staff"],
      "metadata": {
        "department": "Operations"
      }
    },
    {
      "pattern": "*@example.edu",
      "roles": ["user"]
    },
    {
      "pattern": "staff@*",
      "roles": ["staff"]
    },
    {
      "pattern": "contractor@*",
      "roles": ["contractor"]
    }
  ]
}
